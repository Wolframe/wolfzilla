}

FORM ProjectList
{
	projects
	{
		project []
		{
			id 		@int
			name 		string
			description	string
			shortcut	string
			owner
			{
				id	@int
			}
		}
	}
}

FORM readProject
{
	project
	{
		id		@int
	}
}
	
FORM Project
{
	project
	{
		id 		@int
		id2		?@int		;HACK for duplicate assignments
		name 		string
		description	string
		shortcut	string
		owner
		{
			id	@int
		}
	}
}

FORM updateProject
{
	_	Project
}

FORM deleteProject
{
	project
	{
		id		@int
	}
}
